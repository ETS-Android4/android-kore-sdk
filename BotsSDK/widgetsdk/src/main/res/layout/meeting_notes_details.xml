<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbar"
        layout="@layout/kora_custom_toolbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true"
        android:paddingTop="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <RelativeLayout
            android:id="@+id/meeting_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:ellipsize="end"
                android:fontFamily="@font/latomedium"
                android:gravity="center_vertical"
                android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                android:maxLength="100"
                android:maxLines="3"
                android:textColor="@color/color_626281"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/time_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_title"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latomedium"
                android:letterSpacing="0.01"
                android:text="When : "
                android:textColor="@color/color_3e3e51"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@id/time_view_label"
                android:fontFamily="@font/latomedium"
                android:letterSpacing="0.01"
                android:textColor="@color/color_3e3e51"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/meet_notes_detail_invitee_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_view_label"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/latomedium"
                android:letterSpacing="0.01"
                android:text="Invitees : "
                android:textColor="@color/color_3e3e51"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meet_notes_detail_invitee_view_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_view_label"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@id/meet_notes_detail_invitee_view_label"
                android:clickable="true"
                android:fontFamily="@font/latomedium"
                android:letterSpacing="0.01"
                android:textColor="@color/appRequiredColor"
                android:textSize="14sp" />

            <jp.wasabeef.richeditor.TEditor
                android:id="@+id/teditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meet_notes_detail_invitee_view_desc"
                android:background="@color/white"
                android:padding="@dimen/dimen_15_dp"
                android:visibility="visible" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>