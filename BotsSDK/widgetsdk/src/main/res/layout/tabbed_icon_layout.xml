<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="tabModel"
            type="com.kore.ai.widgetsdk.models.KoreHomeFragmentModel" />

        <variable
            name="isActive"
            type="java.lang.Boolean" />
        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:id="@+id/layout_deails"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:id="@+id/image"
            android:src="@{tabModel.resourceId}"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="6dp"
            android:text="@{tabModel.title}"
            android:fontFamily="@font/latomedium"
            android:textColor="@color/splash_color"
            android:textSize="14sp"
            android:visibility="@{isActive ? View.VISIBLE : View.GONE}" />
    </LinearLayout>
</layout>