<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/tempFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mentions_container_narrator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:visibility="gone">

            <com.kore.ai.widgetsdk.utils.TypeWidgetWriter
                android:id="@+id/mentionsNTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="start"
                android:paddingLeft="@dimen/dimen_14dp"
                android:text=""
                android:textSize="24sp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/arrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arrowcontinue"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/tab_background_yesno"
                android:fontFamily="@font/latomedium"
                android:tag="medium"
                android:text="CONTINUE"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="normal"
                android:visibility="gone"
                />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mentions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempFrame"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:visibility="visible" />

        <ListView
            android:id="@+id/mentions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:divider="@null" />

    </LinearLayout>


    <FrameLayout
        android:layout_below="@id/mentions_container"
        android:id="@+id/temp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/typing_indicator_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/typing_indicator_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:srcCompat="@mipmap/kora_icon" />

        <com.eyalbira.loadingdots.LoadingDots xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/typing_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:tag="regular"
            android:textSize="12sp"
            android:visibility="visible"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="#3e3e51"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="3dp"
            app:LoadingDots_dots_space="1dp"

            app:LoadingDots_jump_duration="400"
            app:LoadingDots_jump_height="6dp"

            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typing_indicator_root"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" />

    <View
        android:id="@+id/view_topOfTextField"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/container"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:background="#e4e5eb"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_topOfTextField"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="40dp"

        android:paddingStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/view_icon"
            android:gravity="center"

            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgHelp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_thunder_bolt" />
            <TextView
                android:id="@+id/closeTV"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_alignParentStart="true"
                android:text="@string/icon_e94d"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="#767688"
                android:textSize="24sp"
                android:visibility="gone"
                />
        </LinearLayout>
        <com.kore.ai.widgetsdk.views.MyWidgetAutoCompletionTextView
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view_icon"
            android:layout_toEndOf="@id/view_icon"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/imgSend"
            android:background="@drawable/rounded_compose"
            android:completionThreshold="1"
            android:dropDownAnchor="@id/main_container"
            android:dropDownWidth="match_parent"
            android:gravity="center_vertical|start"
            android:hint="@string/say_something"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxHeight="70dp"
            android:minHeight="40dp"
            android:paddingStart="14dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:popupBackground="@android:color/transparent"
            android:scrollbars="vertical"
            android:tag="regular"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/composer_text_color"
            android:textColorHint="@color/color_A7A9BE"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/imgSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/imgSpeech"
            android:background="?selectableItemBackgroundBorderless"
            android:tag="medium"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:srcCompat="@drawable/new_send_background" />

        <ImageView
            android:id="@+id/imgSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginStart="7dp"
            android:maxHeight="40dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/new_audio_background" />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_downhand"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="-35dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_hand_1" />
    </RelativeLayout>
    </FrameLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:layout_below="@+id/temp_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/pannel_container"
        android:background="#e0e1e9"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        app:el_duration="400"
        app:el_expanded="true"
        app:el_parallax="0.5"
        android:gravity="start"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBarPanel"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/emptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:visibility="gone"
            android:textColor="#161620"
            android:textSize="16sp"
            android:text="@string/empty_panel_text"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pannel_recycler"
            android:layout_width="match_parent"
            android:minHeight="44dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </net.cachapa.expandablelayout.ExpandableLayout>
</RelativeLayout>