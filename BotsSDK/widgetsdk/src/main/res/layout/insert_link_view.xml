<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_15_dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_15_dp"
    android:paddingTop="@dimen/dimen_15_dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/closeBtn"
        android:gravity="start"
        android:paddingTop="@dimen/dimen_15_dp"
        android:paddingBottom="@dimen/dimen_15_dp"
        android:text="Insert Link"
        android:textColor="@color/color_485260"
        android:textSize="21sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dimen_15_dp"
        android:src="@drawable/ic_close_black_24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingEnd="@dimen/dimen_15_dp"
        android:textColorHint="@color/color_485260"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:hintTextColor="@color/splash_background_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Text to display"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingTop="@dimen/dimen_15_dp"
            android:paddingBottom="@dimen/dimen_15_dp"
            android:singleLine="true"
            android:textColor="@color/color_485260"
            android:textColorHint="@color/color_a7b0be"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:paddingEnd="@dimen/dimen_15_dp"
        android:textColorHint="@color/color_485260"
        app:errorEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:hintTextColor="@color/splash_background_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Link To"
            android:maxLength="256"
            android:maxLines="1"
            android:paddingTop="@dimen/dimen_15_dp"
            android:paddingBottom="@dimen/dimen_15_dp"
            android:singleLine="true"
            android:textColor="@color/color_485260"
            android:textColorHint="@color/color_a7b0be"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/link_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/dimen_15_dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.18"
        android:padding="@dimen/dimen_10_dp"
        android:tag="bold"
        android:text="DONE"
        android:textAllCaps="true"
        android:textColor="@color/splash_color"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>
