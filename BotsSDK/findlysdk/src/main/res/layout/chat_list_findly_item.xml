<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/left_bubble_bg"
        android:text="@string/see_all_results" />

    <TextView
        android:id="@+id/tvUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="@drawable/right_bubble_bg"
        android:text="@string/see_all_results" />

    <RelativeLayout
        android:id="@+id/llLiveSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:elevation="@dimen/dimen_2dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvLiveSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dimen_12dp" />

        <com.kore.findlysdk.view.CustomTextView
            android:id="@+id/tvSeeAllResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="@string/see_all_results"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/text_size_sub_header"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>