<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/full_results_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kore.findlysdk.view.CustomTextViewBold
            android:id="@+id/tvSearchResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="@string/search_results"
            android:textColor="@color/txtFontBlack"
            android:textSize="@dimen/text_size_header" />

        <RelativeLayout
            android:id="@+id/llFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@mipmap/filter_grey" />

            <com.kore.findlysdk.view.CustomTextView
                android:id="@+id/tvFilterTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/ivFilter"
                android:text="@string/filter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFilterTopCount"
                android:layout_width="@dimen/dimen_18_dp"
                android:layout_height="@dimen/dimen_18_dp"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:background="@drawable/add_background"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small"
                android:visibility="invisible" />
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/view_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader"
        android:background="@color/background_tab_pressed"
        android:visibility="gone"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorGravity="bottom"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpAllResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hsvOptionsFooter"
        android:layout_below="@+id/view_pager_tab"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hsvOptionsFooter"
        android:layout_below="@+id/view_pager_tab"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/no_meeting" />

        <com.kore.findlysdk.view.CustomTextViewBold
            android:id="@+id/tvSorryData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNoData"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="Sorry, we could not find any results for that"
            android:textSize="@dimen/text_size_sub_header"
            android:textStyle="bold" />

        <com.kore.findlysdk.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSorryData"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="Please try searching with another term"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hsvOptionsFooter"
        android:layout_below="@+id/view_pager_tab"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/mProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:indeterminateBehavior="repeat"
            android:indeterminateOnly="true"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvLiveSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/full_results_bg"
            android:divider="@color/white"
            android:dividerHeight="@dimen/dimen_0"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/svResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llAllresultsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/llPagination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10_dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivPreviousFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_double_arrow_left" />

                    <ImageView
                        android:id="@+id/ivPrevious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:rotation="180"
                        app:srcCompat="@drawable/right_arrow_iconn" />

                    <com.kore.findlysdk.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:layout_marginRight="@dimen/dimen_10_dp"
                        android:text="@string/page" />

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_rect_feedback"
                        android:gravity="center">

                        <com.kore.findlysdk.view.CustomTextView
                            android:id="@+id/tvPageNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1" />

                    </LinearLayout>

                    <com.kore.findlysdk.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:text="of" />

                    <com.kore.findlysdk.view.CustomTextView
                        android:id="@+id/tvNoofPages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:layout_marginRight="@dimen/dimen_10_dp"
                        android:text="8"
                        android:textColor="@color/txtFontBlack"
                        android:textSize="@dimen/text_size_sub_header" />

                    <ImageView
                        android:id="@+id/ivNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/right_arrow_iconn" />

                    <ImageView
                        android:id="@+id/ivNextLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:layout_marginRight="@dimen/dimen_10_dp"
                        android:rotation="180"
                        app:srcCompat="@drawable/ic_double_arrow_left" />


                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/hsvOptionsFooter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tabs_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAllresults"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAllResults"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/allresults_select" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvAllResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All Results (0)"
                    android:textColor="@color/txtFontBlack"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llFaqs"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivFaq"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/faq_unselect" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvFaqResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FAQ's (0)"
                    android:textColor="@color/tabs_text_bg"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPages"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPages"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/pages_unselect" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvPagesResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Web (0)"
                    android:textColor="@color/tabs_text_bg"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llActions"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivActions"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/actions_unselect" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvActionsResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Task (0)"
                    android:textColor="@color/tabs_text_bg"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDocuments"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDocs"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/docs_unselect" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvDocumentsResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="File (0)"
                    android:textColor="@color/tabs_text_bg"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStructuredData"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/tabs_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivData"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@mipmap/docs_unselect" />

                <com.kore.findlysdk.view.CustomTextViewBold
                    android:id="@+id/tvDataResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="File (0)"
                    android:textColor="@color/tabs_text_bg"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/rlFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_5dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFilters"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_filter"
                android:contentDescription="@string/submit"
                app:backgroundTint="?attr/colorPrimary" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvFilterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_background"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>