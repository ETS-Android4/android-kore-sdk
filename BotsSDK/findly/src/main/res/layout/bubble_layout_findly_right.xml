<?xml version="1.0" encoding="utf-8"?>
<com.kore.findlysdk.view.SendBubbleContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_bubble_layout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <!-- Send Bubble -->
    <com.kore.findlysdk.view.SendBubbleLayout
        android:id="@+id/sendBubbleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00FF00FF">

        <com.kore.findlysdk.view.HeaderLayout
            android:id="@+id/headerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.kore.findlysdk.view.SendBubbleLayout>

</com.kore.findlysdk.view.SendBubbleContainer>