<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_template_bg"
    android:orientation="vertical">

    <com.kore.findlysdk.view.CustomTextViewBold
        android:id="@+id/tvCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:text="Rewards and signature card"
        android:textAllCaps="true"
        android:textColor="@color/txtFontBlack"
        android:textSize="@dimen/text_size_sub_header"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCardImage"
            android:layout_width="@dimen/dimen_44dp"
            android:layout_height="@dimen/dimen_30dp"
            android:background="@drawable/master_card"/>

        <com.kore.findlysdk.view.CustomTextView
            android:id="@+id/tvCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/text_size_sub_header"
            android:text="** 6943" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kore.findlysdk.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/due_amount"
                android:textColor="@color/card_due_txt_clr" />

            <com.kore.findlysdk.view.CustomTextViewBold
                android:id="@+id/tvDueAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$12.00"
                android:textColor="@color/txtFontBlack"
                android:textSize="@dimen/text_size_sub_header"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kore.findlysdk.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/due_date"
                android:textColor="@color/card_due_txt_clr"/>

            <com.kore.findlysdk.view.CustomTextViewBold
                android:id="@+id/tvDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$12.00"
                android:textColor="@color/txtFontBlack"
                android:textSize="@dimen/text_size_sub_header"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <com.kore.findlysdk.view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/button_feedback"
            android:paddingLeft="@dimen/dimen_44"
            android:paddingTop="@dimen/dimen_7dp"
            android:paddingRight="@dimen/dimen_44"
            android:paddingBottom="@dimen/dimen_7dp"
            android:text="@string/pay_now"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <com.kore.findlysdk.view.CustomTextView
            android:id="@+id/tvPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="@dimen/dimen_7dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@drawable/button_feedback"
            android:text="@string/pay_now"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>