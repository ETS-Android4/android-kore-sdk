<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="knowledge"
            type="kore.botssdk.models.KnowledgeDetailModel" />

        <import type="kore.botssdk.utils.DateUtils" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <kore.botssdk.view.ProfileTextView
                android:id="@+id/profile_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_circle"
                android:gravity="center"
                android:text="@{knowledge.owner.getInitials()}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_view"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/profile_view"
                android:fontFamily="sans-serif-medium"
                android:text="@{knowledge.owner.getName()}"
                android:textColor="@color/color_465360"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_view"
                android:layout_marginTop="3dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/profile_view"
                android:text="@{DateUtils.formattedSentDateV6(knowledge.createdOn)}"
                android:textColor="@color/color_a3b0be"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@{knowledge.title}"
            android:textColor="@color/color_465360"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{knowledge.desc}"
            android:textColor="@color/color_232323"
            android:textSize="15sp" />
    </LinearLayout>
</layout>