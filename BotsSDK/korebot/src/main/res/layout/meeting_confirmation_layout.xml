<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slot_confirm_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/shadow_layer_background"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:padding="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:fontFamily="@font/latoregular"
            android:maxLines="1"
            android:text=""
            android:textColor="#485260"
            android:textSize="16sp" />

        <!--
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:gravity="start|top"
            android:maxLines="1"
            android:text="Selected Slots"
            android:textColor="#757587"
            android:textSize="10sp" />
            -->

        <LinearLayout
            android:id="@+id/time_slots_view"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <ImageView
             android:layout_width="18dp"
             android:layout_height="18dp"
            android:layout_marginEnd="5dp"
             android:layout_marginTop="2dp"
             app:srcCompat="@drawable/ic_baseline_watch_later_24px"/>
        <TextView
            android:id="@+id/time_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latomedium"


            android:lineSpacingExtra="5dp"
            android:textColor="@color/color_404051"
            android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/temp_imgloc"
            android:layout_width="20dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/layout"
            android:layout_height="20dp"
            app:srcCompat="@drawable/vector_location_icon"/>

        <TextView
            android:id="@+id/location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center|start"
           android:fontFamily="@font/latomedium"
            android:textColor="#485260"
            android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/vector_person"
            android:drawablePadding="7dp"
            android:gravity="center|start"
            android:textColor="#485260"

            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>