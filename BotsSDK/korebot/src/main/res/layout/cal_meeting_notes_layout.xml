<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minHeight="20dp"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/latosemibold"
            android:gravity="top|start"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0.04"
            android:textColor="@color/color_161620"
            android:textSize="17sp" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sidebar"
                android:layout_width="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/splash_background_color"
                android:layout_marginStart="2dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:minHeight="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="@font/latomedium"
                android:gravity="top|start"
                android:letterSpacing="0.04"
                android:textColor="@color/color_161620"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:id="@+id/timev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/icomoon"
                    android:gravity="center"
                    android:text="@string/icon_e96e"
                    android:textColor="@color/color_767688" />

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/latomedium"
                    android:gravity="center"
                    android:tag="medium"
                    android:textColor="@color/color_626281"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timev"
                android:layout_alignStart="@+id/timev"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/icomoon"
                    android:gravity="center"
                    android:text="@string/icon_e929"
                    android:textColor="@color/color_767688" />

                <TextView
                    android:id="@+id/creator_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:tag="medium"
                    android:textColor="@color/color_626281"
                    android:textSize="13dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/inset_file_divider"
        android:visibility="gone" />
</LinearLayout>