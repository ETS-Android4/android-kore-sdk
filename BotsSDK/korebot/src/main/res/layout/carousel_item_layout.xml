<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carousel_item_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/carousel_layout_height"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/carousel_image_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/carousel_item_image"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/carousel_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carousel_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <ListView
            android:id="@+id/carousel_button_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/carousel_image_detail_container"
            android:visibility="visible"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/carousel_textViw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/bubble_right_unselected_url"
            android:text="Opop"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
