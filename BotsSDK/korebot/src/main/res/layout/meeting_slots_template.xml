<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/meeting_layout">

    <kore.botssdk.view.AutoExpandListView
        android:id="@+id/slots_list"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:divider="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="bold"
        android:id="@+id/show_more_view"
        android:text="@string/modify_slots"
        android:gravity="center"
        android:background="@drawable/meeting_slot_modify_background"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="2dp"
        android:minHeight="40dp"
        android:textColor="@color/splash_color"
        android:textSize="15dp" />
</LinearLayout>
