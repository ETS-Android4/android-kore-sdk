<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/carousel_view_button_height"
    android:descendantFocusability="blocksDescendants">

    <Button
        android:id="@+id/bot_carousel_item_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:textColor="#6168e7"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Button"/>
    <View
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bot_carousel_item_button"
        android:background="@color/readReceiptLightGrey"
        />


</RelativeLayout>