<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233842"
    android:gravity="center"
    tools:context=".activity.BotHomeActivity">

    <ImageView
        android:id="@+id/bot_logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/launchBotBtn"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/launchBotBtn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/form_input_bg"
        android:padding="@dimen/dimen_7dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/etIdentity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Please enter email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <!-- Kore Bot -->
    <Button
        android:id="@+id/launchBotBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_drawable"
        android:paddingLeft="20dp"
        android:text="Future Bank"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/launchCVSBotBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launchBotBtn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_drawable"
        android:paddingLeft="20dp"
        android:text="CVS"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/launchPfizerBotBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launchCVSBotBtn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_drawable"
        android:text="Pfizer"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</RelativeLayout>