<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_reply_item_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_height"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal"
    android:paddingStart="0dp"
    android:paddingTop="3dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:id="@+id/quick_reply_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/theme_1_button_bg"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quick_reply_item_image"
            android:layout_width="@dimen/quick_reply_image_width"
            android:layout_height="@dimen/quick_reply_image_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_rect_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/quick_reply_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Hello"
            android:textStyle="bold"
            android:textColor="@color/theme_1_button_bg_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>